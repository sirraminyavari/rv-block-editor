{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "baseUrl": "src",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "declaration": true,
        "incremental": false,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "moduleResolution": "Node",
        "noEmit": false,
        "resolveJsonModule": true,
        "target": "ES6",
        "module": "ES2015",
        // "strict": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
        ],
    },
    "include": [
        "*/**/*.scss",
        "*/**/*.ts",
        "*/**/*.tsx",
        "./declarations.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./src/Demo"
    ]
}